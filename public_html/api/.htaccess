Options -Indexes

<IfModule mod_authz_core.c>
    Require all denied
    <FilesMatch "^(login|register|solicitar_recuperacao|reset_senha|reenviar_email|ativar|dados_vitrine|get_sessao|logout|produtos|adicionar_produto|editar_produto|excluir_produto|vendas|editar_venda|excluir_venda|configuracoes|fornecedores|categorias|subcategorias|lotes|lote_itens|aprovar_lote|relatorio_lote|baixar_devolucao_lote|devolucao|excluir_conta|corrigir_cadastro_inicial)\.php$">
        Require all granted
    </FilesMatch>
    <FilesMatch "^(bootstrap|secrets|enviar_email)\.php$">
        Require all denied
    </FilesMatch>
</IfModule>

<IfModule !mod_authz_core.c>
    Order deny,allow
    Deny from all
    <FilesMatch "^(login|register|solicitar_recuperacao|reset_senha|reenviar_email|ativar|dados_vitrine|get_sessao|logout|produtos|adicionar_produto|editar_produto|excluir_produto|vendas|editar_venda|excluir_venda|configuracoes|fornecedores|categorias|subcategorias|lotes|lote_itens|aprovar_lote|relatorio_lote|baixar_devolucao_lote|devolucao|excluir_conta|corrigir_cadastro_inicial)\.php$">
        Allow from all
    </FilesMatch>
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteRule ^PHPMailer/ - [F,L]
</IfModule>
